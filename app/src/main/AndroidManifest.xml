<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions we'll need for the app -->
    
    <!-- Permission to control Do Not Disturb mode -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    
    <!-- Permission to detect microphone usage -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Permission to run in foreground -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    
    <!-- Permission to check phone state (for call detection) -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    
    <!-- Permission for internet (if needed for future features) -->
    <uses-permission android:name="android.permission.INTERNET" />
    
    <!-- Permission for accessibility service -->
    
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.WhatsAppCallProtector"
        tools:targetApi="31">
        

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Our foreground service for monitoring -->
        <service
            android:name=".service.CallMonitoringService"
            android:enabled="true"
            android:exported="false" />
            
        <!-- Accessibility Service for WhatsApp detection -->
        <service
            android:name=".accessibility.WhatsAppAccessibilityService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true"
            android:label="@string/accessibility_service_label">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

    </application>

</manifest>
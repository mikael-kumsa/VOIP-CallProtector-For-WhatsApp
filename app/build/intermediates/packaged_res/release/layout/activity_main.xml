<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingVertical="32dp">

            <!-- App Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name" />

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/primary_dark"
                android:layout_marginTop="16dp" />

            <!-- App Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_description"
                android:textSize="16sp"
                android:textColor="@color/on_surface"
                android:lineSpacingExtra="4dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="16dp" />

        </LinearLayout>

        <!-- Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Status Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protection Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface" />

                <!-- Status Indicator -->
                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/service_stopped"
                    android:textSize="16sp"
                    android:textColor="@color/error_red"
                    android:layout_marginTop="8dp" />

                <!-- Status Description -->
                <TextView
                    android:id="@+id/statusDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DND will be automatically enabled during WhatsApp calls"
                    android:textSize="14sp"
                    android:textColor="@color/on_surface"
                    android:alpha="0.7"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Permissions Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Required Permissions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface" />

                <!-- DND Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_lock_silent_mode"
                        android:contentDescription="DND permission"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Do Not Disturb Access"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/dndPermissionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Granted"
                        android:textSize="12sp"
                        android:textColor="@color/error_red"
                        android:background="@drawable/permission_status_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Accessibility Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:contentDescription="Accessibility permission"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Accessibility Service"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/accessibilityPermissionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Granted"
                        android:textSize="12sp"
                        android:textColor="@color/error_red"
                        android:background="@drawable/permission_status_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Microphone Permission -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mic"
                        android:contentDescription="Microphone permission"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Microphone Access"
                        android:textSize="14sp"
                        android:textColor="@color/on_surface"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/microphonePermissionStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not Granted"
                        android:textSize="12sp"
                        android:textColor="@color/error_red"
                        android:background="@drawable/permission_status_bg"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp" />

                </LinearLayout>

                <!-- Grant Permissions Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/grantPermissionsButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/grant_permissions"
                    android:layout_marginTop="20dp"
                    app:icon="@android:drawable/ic_lock_lock"
                    app:iconGravity="textStart"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="24dp">

            <!-- Start Protection Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/startProtectionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/start_protection"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_media_play"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button" />

            <!-- Stop Protection Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/stopProtectionButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/stop_protection"
                android:layout_marginTop="12dp"
                app:icon="@android:drawable/ic_media_pause"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>
        <Button
                android:id="@+id/privacyPolicyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Privacy Policy"
                android:layout_marginTop="16dp"
                style="@style/Widget.Material3.Button.TextButton" />
    </LinearLayout>

</ScrollView>